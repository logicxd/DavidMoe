<main id="home-body">
    <div id="profile-background"></div>
    <div class="container">

        <div id="profile-header">
            <div id="profile-description-group">
                <img id="profile-picture" class="responsive-img" src="img/index/profile-picture.jpg" alt="profile-picture">
                <h2 id="profile-name">Aung Moe</h2>
                <div id="profile-job" style="font-size: 25px;">Software Engineer</div>
                <div class="row-m-b-0 center">
                    <h1 id="profile-title-message">
                        {{#each data.occupations}}
                        <div id="states-{{@index}}" class="states" data-value="{{this.state}}">
                            {{this.state}}
                        </div>
                        <div id="occupations-{{@index}}" class="occupations" data-value="{{this.occupation}}">
                            {{this.occupation}}
                        </div>
                        {{/each}}
                    </h1>
                </div>
            </div>
        </div>

        <div id="recent-highlights">
            <h4>Recent Highlights</h4>
            <div class="row">
                <!-- PC View -->
                {{#each data.highlights}}
                <div class="col s12 m12 l4 hide-on-med-and-down">
                    <h5>
                        <i class="material-icons">calendar_today</i> {{this.date}}
                    </h5>
                    <div class="card hoverable large">
                        {{#if this.image}}
                        <div class="card-image">
                            <a href="{{this.image.href}}" target="_blank">
                                <img src="{{this.image.src}}">
                            </a>
                        </div>
                        {{/if}}
                        <div class="card-content">
                            <span class="card-title">{{this.title}}</span>
                            <p>
                                {{{this.description}}}
                            </p>
                        </div>
                        {{#if this.action}}
                         <div class="card-action">
                            <a href="{{this.action.link}}" target="_blank">{{this.action.name}}</a>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
                <!-- Mobile View -->
                <div class="carousel carousel-slider show-on-medium-and-down">
                    {{#each data.highlights}}
                    <div class="carousel-item" href="#one!">
                        <div>
                            <h2 class="m-b-0">{{this.title}}</h2>
                            <p class="m-t-0">{{this.date}}</p>
                        </div>
                        <div class="row carousel-row">
                            {{#if this.image}}
                            <div class="col s6 carousel-img-container">
                                <img class="materialboxed carousel-img" src="{{this.image.src}}">
                            </div>
                            <div class="col s6 carousel-description-container">
                                {{{this.description}}}
                                {{#if this.action}}
                                <div class="carousel-description-button-container">
                                    <a href="{{this.action.link}}" target="_blank">
                                        {{this.action.name}}
                                    </a>
                                </div>
                            {{/if}}
                            </div>
                            {{else}}
                            <div class="col carousel-description-container">
                                {{{this.description}}}
                                {{#if this.action}}
                                <div class="carousel-description-button-container">
                                    <a href="{{this.action.link}}" target="_blank">
                                        {{this.action.name}}
                                    </a>
                                </div>
                            {{/if}}
                            </div>
                            {{/if}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="divider"></div>

        <div id="education">
            <h4>Education</h4>
            <div class="row">
                <div class="col s3 m2 l1">
                    <img src="img/index/education-uci.png" class="responsive-img">
                </div>
                <div class="col s9 m7 l8">
                    <h5 class="m-t-0">University of California, Irvine</h5>
                    <h6 class="show-on-small">2016 - 2018</h6>
                    <h6>Bachelor of Science in Computer Science</h6>
                    <h6>GPA 3.75 - Cum Laude</h6>
                </div>
                <div class="col s0 m3 l3 hide-on-small-only">
                    <h5 class="right-align education-year">
                        2016 - 2018
                    </h5>
                </div>
            </div>
            <div class="row">
                <div class="col s3 m2 l1">
                    <img src="img/index/education-csm.jpg" class="responsive-img">
                </div>
                <div class="col s9 m7 l8">
                    <h5 class="m-t-0">College of San Mateo</h5>
                    <h6 class="show-on-small">2013 - 2016</h6>
                    <h6>Associate of Science in Computer &amp; Information, Mathematics, and Physics</h6>
                    <h6>GPA 3.65 (3.90 CS) - Magna Cum Laude</h6>
                </div>
                <div class="col s0 m3 l3 hide-on-small-only">
                    <h5 class="right-align education-year">
                        2013 - 2016
                    </h5>
                </div>
            </div>
        </div>
        <div class="divider"></div>

        <div id="projects">
            <h4>Projects</h4>
            {{#each data.projects}}
            <div class="project-row">
                <div class="col s12 m6">
                    <img class="materialboxed projects-image" src="{{this.image}}">
                </div>
                <div class="col s12 m6 projects-description-container">
                    <h5>{{this.title}}</h5>
                    {{#each this.skills}}
                    <div class="chip">
                        <img src="{{this.image}}" alt="Skill Icon"> {{this.name}}
                    </div>
                    {{/each}}
                    <p>
                        {{{this.description}}}
                    </p>
                    <div class="projects-description-button-container">
                        {{#if this.github}}
                        <a href="{{this.github}}" target="_blank" class="waves-effect waves-light btn projects-description-button">
                            <i class="fab fa-github"></i> GitHub</i>
                        </a>
                        {{/if}}
                        {{#if this.website}}
                         <a href="{{this.website.link}}" target="_blank" class="waves-effect waves-light btn projects-description-button">
                            <i class="fas fa-link"></i> {{this.website.name}}</i>
                        </a>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>