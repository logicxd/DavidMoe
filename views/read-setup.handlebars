<main>
    <div class="container">
        <h2>Text Extractor</h2>
        <div class="row">
            <div class="input-field col s12">
                <input id="url" placeholder="URL of the website that contains the text" type="url" class="validate">
                <label for="url">Novel/Text URL</label>
                <span class="helper-text" data-error="Please enter a valid URL"></span>
            </div>
        </div>
        <div class="row">
            <label>
                <input id="autoload-next" type="checkbox" checked />
                <span>Automatically load next page</span>
            </label>
        </div>
        <div class="row">
            <button id="submit" class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>
</main>