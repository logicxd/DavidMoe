<main class="container">
    <h2>Bookmark</h2>
    <div class="row">
        <a id="bookmark-check-updates-button" class="waves-effect waves-light btn-small">Check Updates</a>
        <a id="bookmark-add-button" class="waves-effect waves-light btn-small">Add</a>
    </div>
    {{#each bookmarks}}
    <div class="row bookmark">
        <input class="bookmark-id" type="hidden" value="{{this.id}}"/>
        <div class="card horizontal bookmark-card">
            {{!-- <a id="bookmark-edit-button" class="btn-floating waves-effect waves-light btn-small"><i class="material-icons">edit</i></a> --}}
            <div class="card-image">
                <img class="bookmark-image bookmark-edit-element" src="{{this.imageUrl}}" />
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <span class="card-title bookmark-edit-element">{{this.title}}</span>
                    <div class="bookmark-content-row">
                        Last: <a href="{{this.lastReadUrl}}">{{this.lastReadTitle}}</a>
                    </div>
                    {{#if this.nextChapterUrl}}
                    <div class="bookmark-content-row">
                        Next: <a href="{{this.nextChapterUrl}}">{{this.nextChapterTitle}}</a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</main>

<!-- Add Modal -->
<div id="bookmark-info-modal" class="modal bottom-sheet modal-fixed-footer">
    <div class="modal-content">
        <h4>Add Bookmark</h4>
        <div class="row m-b-0">
            <div class="input-field col s12">
                <input id="bookmark-info-modal-title" type="text" class="validate" required aria-required="true">
                <label for="bookmark-info-modal-title" data-error="Invalid">Title</label>
                <span class="helper-text" data-error="Please enter a title"></span>
            </div>
        </div>
        <div class="row m-b-0">
            <label class="input-field col s12">
                <input id="bookmark-info-modal-image" type="url" class="validate" required aria-required="true">
                <label for="bookmark-info-modal-image" data-error="Invalid">Image</label>
                <span class="helper-text" data-error="Please enter a image URL"></span>
            </label>
        </div>
        <div class="row m-b-0">
            <label class="input-field col s12">
                <input id="bookmark-info-modal-url" type="url" class="validate" required aria-required="true">
                <label for="bookmark-info-modal-url" data-error="Invalid">URL</label>
                <span class="helper-text" data-error="Please enter the content URL"></span>
            </label>
        </div>
        <div class="row m-b-0">
            <div class="col s6">
                <label>
                    <input id="bookmark-info-modal-radio-webtoon" name="bookmark-info-modal-content-type-group"
                        type="radio" checked />
                    <span>Webtoon</span>
                </label>
            </div>
            <div class="col s6">
                <label>
                    <input id="bookmark-info-modal-radio-novel" name="bookmark-info-modal-content-type-group"
                        type="radio" />
                    <span>Novel</span>
                </label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a id="bookmark-info-modal-button" class="waves-effect btn disabled">Add</a>
    </div>

    <!-- Loading screen -->
    <div id="bookmark-loading-screen">
        <div class="preloader-wrapper active ">
            <div class="spinner-layer spinner-blue">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>
                <div class="gap-patch">
                    <div class="circle"></div>
                </div>
                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>

            <div class="spinner-layer spinner-red">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>
                <div class="gap-patch">
                    <div class="circle"></div>
                </div>
                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>

            <div class="spinner-layer spinner-yellow">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>
                <div class="gap-patch">
                    <div class="circle"></div>
                </div>
                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>

            <div class="spinner-layer spinner-green">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>
                <div class="gap-patch">
                    <div class="circle"></div>
                </div>
                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>
    </div>
</div>